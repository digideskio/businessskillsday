= simple_form_for @chapter, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification

  .form-inputs
    = f.input :contact, :label => 'Contact Person'
    = f.input :email
    %hr
    = f.input :address
    = f.input :city
    = f.input :state, :collection => us_states
    = f.input :zip

  .form-actions
    = f.button :submit
