- title 'Tools: Nametag'

- content_for :sidebar do
  = render :partial => 'admin/sidebar'

- if notice.present?
  %p#notice.alert.alert-success= notice

.row-fluid
  .span12.section
    %h1= icon_title 'wrench', 'Nametags'

.row-fluid
  %p
    The generated nametags are shown below.
    = link_to 'Click here to open the nametags separately.', admin_nametags_path(:format => :pdf), :target => '_blank'

.row-fluid
  .span12.section
    %iframe{ :src => admin_nametags_path(:format => :pdf), :width => '100%', :height => '500px' }
